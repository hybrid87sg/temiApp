<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/coral"
    tools:context=".SettingsActivity">

    <ImageView
        android:id="@+id/homeIv"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_home"
        app:tint="@color/dblue" />

    <TextView
        android:id="@+id/titleSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/qanelas_semibold"
        android:text="@string/settings_page"
        android:textColor="@color/dblue"
        android:textSize="60sp" />
    
    <TextView
        android:layout_width="500dp"
        android:layout_height="550dp"
        android:id="@+id/tvLocations"
        android:layout_centerInParent="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvLocations"
        android:id="@+id/apply"
        android:text="@string/apply_settings"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:padding="30dp"/>


</RelativeLayout>