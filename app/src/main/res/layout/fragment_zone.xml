<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/coral"
    android:padding="40dp"
    tools:context=".fragments.ZoneFragment">

    <TextView
        android:id="@+id/titleTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:fontFamily="@font/qanelas_semibold"
        android:gravity="center_horizontal"
        android:text="@string/maptitle"
        android:textColor="@color/white"
        android:textSize="40sp" />


    <LinearLayout
        android:id="@+id/zoneBar"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_below="@+id/titleTop"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivZoneA"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:src="@drawable/showmewhere_zonea" />

        <ImageView
            android:id="@+id/ivZoneB"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:src="@drawable/showmewhere_zoneb" />

        <ImageView
            android:id="@+id/ivZoneC"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:src="@drawable/showmewhere_zonec" />

        <ImageView
            android:id="@+id/ivZoneD"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:src="@drawable/showmewhere_zoned" />

        <ImageView
            android:id="@+id/ivZoneE"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:src="@drawable/showmewhere_zonee" />

        <ImageView
            android:id="@+id/ivZoneF"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:src="@drawable/showmewhere_zonef" />

        <ImageView
            android:id="@+id/ivZoneG"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:src="@drawable/showmewhere_zoneg" />


    </LinearLayout>

    <GridLayout
        android:id="@+id/gridZoneB"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/zoneBar"
        android:layout_centerHorizontal="true"
        android:columnCount="5"
        android:rowCount="3"
        android:visibility="gone">

        <Button
            android:id="@+id/b1"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:layout_margin="25dp"
            android:background="@drawable/button_zone"
            android:fontFamily="@font/qanelas_semibold"
            android:text="@string/a1"
            android:textSize="40sp" />

        <Button
            android:id="@+id/b2"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:layout_margin="25dp"
            android:background="@drawable/button_zone"
            android:fontFamily="@font/qanelas_semibold"
            android:text="@string/a2"
            android:textSize="40sp" />

        <Button
            android:id="@+id/b3"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:layout_margin="25dp"
            android:background="@drawable/button_zone"
            android:fontFamily="@font/qanelas_semibold"
            android:text="@string/a3"
            android:textSize="40sp" />

        <Button
            android:id="@+id/b4"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:layout_margin="25dp"
            android:background="@drawable/button_zone"
            android:fontFamily="@font/qanelas_semibold"
            android:text="@string/a4"
            android:textSize="40sp" />

        <Button
            android:id="@+id/b5"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:layout_margin="25dp"
            android:background="@drawable/button_zone"
            android:fontFamily="@font/qanelas_semibold"
            android:text="@string/a5"
            android:textSize="40sp" />

        <Button
            android:id="@+id/b6"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:layout_margin="25dp"
            android:background="@drawable/button_zone"
            android:fontFamily="@font/qanelas_semibold"
            android:text="@string/a6"
            android:textSize="40sp" />

        <Button
            android:id="@+id/b7"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:layout_margin="25dp"
            android:background="@drawable/button_zone"
            android:fontFamily="@font/qanelas_semibold"
            android:text="@string/a7"
            android:textSize="40sp" />


    </GridLayout>

    <GridLayout
        android:id="@+id/gridZoneA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/zoneBar"
        android:layout_centerHorizontal="true"
        android:columnCount="5"
        android:rowCount="3"
        android:visibility="gone">

        <Button
            android:id="@+id/a1"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:layout_margin="25dp"
            android:background="@drawable/button_zone"
            android:fontFamily="@font/qanelas_semibold"
            android:text="@string/a1"
            android:textSize="40sp" />

        <Button
            android:id="@+id/a2"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:layout_margin="25dp"
            android:background="@drawable/button_zone"
            android:fontFamily="@font/qanelas_semibold"
            android:text="@string/a2"
            android:textSize="40sp" />

        <Button
            android:id="@+id/a3"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:layout_margin="25dp"
            android:background="@drawable/button_zone"
            android:fontFamily="@font/qanelas_semibold"
            android:text="@string/a3"
            android:textSize="40sp" />

        <Button
            android:id="@+id/a4"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:layout_margin="25dp"
            android:background="@drawable/button_zone"
            android:fontFamily="@font/qanelas_semibold"
            android:text="@string/a4"
            android:textSize="40sp" />

        <Button
            android:id="@+id/a5"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:layout_margin="25dp"
            android:background="@drawable/button_zone"
            android:fontFamily="@font/qanelas_semibold"
            android:text="@string/a5"
            android:textSize="40sp" />

        <Button
            android:id="@+id/a6"
