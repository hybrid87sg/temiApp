        <Button
            android:id="@+id/a8"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:layout_margin="25dp"
            android:background="@drawable/button_zone"
            android:fontFamily="@font/qanelas_semibold"
            android:text="@string/a8"
            android:textSize="40sp" />

        <Button
            android:id="@+id/a9"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:background="@drawable/button_zone"
            android:fontFamily="@font/qanelas_semibold"
            android:text="@string/a9"
            android:textSize="40sp" />


    </GridLayout>

    <GridView
        android:id="@+id/zoneGrid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/gridViewLayout"
        android:layout_below="@id/titleTop"
        android:numColumns="7"
        android:scrollbars="none"
        android:visibility="gone" />

    <GridView
        android:id="@+id/gridViewLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/zoneBar"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20dp"
        android:background="@color/coral"
        android:columnWidth="130dp"
        android:gravity="center"
        android:horizontalSpacing="15dp"
        android:numColumns="5"
        android:scrollbars="none"
        android:verticalSpacing="40dp" />

</RelativeLayout>