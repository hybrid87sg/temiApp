<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/coral"
    tools:context=".MapActivity">


    <FrameLayout
        android:id="@+id/flZone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/btmNavLayout"
        android:layout_centerInParent="true" />

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/btmNavLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/llHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_home"
                    app:tint="@color/dblue" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/qanelas_semibold"
                    android:gravity="center_vertical"
                    android:text="@string/home"
                    android:textColor="@color/dblue"
                    android:textSize="35sp" />
            </LinearLayout>

            <Space
                android:layout_width="40dp"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/llZone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_location"
                    app:tint="@color/dblue" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/qanelas_semibold"
                    android:gravity="center_vertical"
                    android:text="@string/viewselect"
                    android:textColor="@color/dblue"
                    android:textSize="35sp" />
            </LinearLayout>

            <Space
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                />

            <LinearLayout
                android:id="@+id/llMap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_map"
                    app:tint="@color/dblue" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/qanelas_semibold"
                    android:gravity="center_vertical"
                    android:text="@string/mapview"
                    android:textColor="@color/dblue"
                    android:textSize="35sp" />
            </LinearLayout>

            <Space
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <LinearLayout
                android:id="@+id/llWifi"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_wifi"
                    app:tint="@color/dblue" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/qanelas_semibold"
                    android:gravity="center_vertical"
                    android:text="Connect to Free Wifi"
                    android:textColor="@color/dblue"
                    android:maxLines="2"
                    android:inputType="textMultiLine"
                    android:textSize="35sp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</RelativeLayout>