<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/coral"
    tools:context=".MapActivity">


    <com.google.android.material.navigation.NavigationView
        android:id="@+id/menuView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/btmNavLayout"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/coral"
        android:paddingStart="30dp"
        android:paddingTop="50dp"
        android:paddingEnd="30dp"
        app:elevation="0dp"
        app:itemHorizontalPadding="20dp"
        app:itemTextAppearance="@style/TextAppearance.AppCompat.BigFont"
        app:itemTextColor="@color/dblue"
        app:menu="@menu/zone_menu" />

    <FrameLayout
        android:id="@+id/flZone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/btmNavLayout"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@id/menuView" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/btmNavBar"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:background="@color/coral"
        android:fitsSystemWindows="true"
        android:visibility="gone"
        app:elevation="0dp"
        app:itemIconSize="30dp"
        app:itemIconTint="@color/dblue"
        app:itemTextAppearanceActive="@style/TextAppearance.AppCompat.MidFont"
        app:itemTextAppearanceInactive="@style/TextAppearance.AppCompat.MidFont"
        app:itemTextColor="@color/dblue"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/btm_nav_menu" />

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/btmNavLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/llHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_home"
                    app:tint="@color/dblue" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/qanelas_semibold"
                    android:gravity="center_vertical"
                    android:text="@string/home"
                    android:textColor="@color/dblue"
                    android:textSize="50sp" />
            </LinearLayout>

            <Space
                android:layout_width="40dp"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/llZone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_map"
                    app:tint="@color/dblue" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/qanelas_semibold"
                    android:gravity="center_vertical"
                    android:text="@string/viewselect"
                    android:textColor="@color/dblue"
                    android:textSize="50sp" />
            </LinearLayout>

            <Space
                android:layout_width="40dp"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/llWifi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_wifi"
                    app:tint="@color/dblue" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/qanelas_semibold"
                    android:gravity="center_vertical"
                    android:text="@string/wifi"
                    android:textColor="@color/dblue"
                    android:textSize="50sp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</RelativeLayout>