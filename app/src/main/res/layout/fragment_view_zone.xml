<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/dblue"
    android:padding="30dp"
    tools:context=".fragments.ViewZoneFragment">

    <LinearLayout
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/qanelas_semibold"
            android:text="@string/zones"
            android:textColor="@color/white"
            android:textSize="50sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/qanelas_semibold"
            android:text="@string/whichview"
            android:textColor="@color/white"
            android:textSize="30sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTitle"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/zoneView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/ibZonebtn"
                android:layout_width="200dp"
                android:layout_height="130dp"
                android:layout_gravity="center_horizontal"
                android:background="@color/coral"
                android:scaleType="fitCenter"
                android:src="@drawable/zone_view" />

            <Button
                android:id="@+id/btnZoneView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/zoneview"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:backgroundTint="@color/coral"/>

        </LinearLayout>

        <Space
            android:layout_width="120dp"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/mapView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:layout_width="200dp"
                android:layout_height="130dp"
                android:layout_gravity="center_horizontal"
                android:background="@color/coral"
                android:src="@drawable/map_view"
                android:scaleType="fitCenter"/>
            <Button
                android:id="@+id/btnMapView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mapview"
                android:layout_gravity="center"/>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>